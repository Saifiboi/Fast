#include<iostream>
using namespace std;
void draw(int n,char ch)
{
	if(n<=0)
	{
		return;
	}
	else if(n==1)
	{
		cout<<ch<<"#";
	}
	else
	{
		cout<<ch<<"#";
		draw(n-1,ch);
	}
}
void space(int n)
{
	if(n<=0)
		return;
	else
	{
		cout<<' ';
		space(n-1);
	}
}
void pyramid(int n)
{
	if(n<=0)
		return ;
	else
	{
		pyramid(n-1);
		space(5-n);
		draw(n,' ');
		cout<<endl;
	}
}
int main ()
{
	pyramid(5);
}

