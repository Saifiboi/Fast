#ifndef STUDENT_H_
#define STUDENT_H_
#include<iostream>
#include<cstring>
#include<iomanip>
class Student {
private:
	char *Num_Roll;
	char *name;
	int Batch;
	int Courses_Code[5];
	char *Courses_Name[5];
	char Courses_Grades[6];
	float CGPA;
	char *Degree;
	char *Dob;
public:
