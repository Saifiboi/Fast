int Patient::getAge() const {
	return age;
}

void Patient::setAge(int age) {
	this->age = age;
}

const Doctor* Patient::getD() const {
	return D;
}

void Patient::setD(Doctor *d) {
	D = d;
}

const string& Patient::getOccupation() const {
	return occupation;
}

void Patient::setOccupation(const string &occupation) {
	this->occupation = occupation;
}

const string& Patient::getPassword() const {
	return password;
}

void Patient::setPassword(const string &password) {
	this->password = password;
}

int Patient::getPatientId() const {
	return patient_id;
}

void Patient::setPatientId(int patientId) {
	patient_id = patientId;
}

const string& Patient::getPatientName() const {
	return patient_Name;
}

void Patient::setPatientName(const string &patientName) {
