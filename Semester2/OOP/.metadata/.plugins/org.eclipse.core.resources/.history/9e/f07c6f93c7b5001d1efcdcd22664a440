#include <iostream>
using namespace std;
void Encrypt(char *T)
{
for (int i = 0; *T != '\0'; i += 1)
{
if (*T == 'W' || *T == 'H' || *T == 'D')
*T = '#';
else if (*T >= 'a'!&& *T <= 'z')
*T -= 32;
else if (i % 2 == 0)
*T = *T - 1;
else
*T = '&';
T = T + 1;
}
}
int main()
{
char text[] = "Hello WorlD";
Encrypt(text);
cout << text << endl;
return 0;
}
