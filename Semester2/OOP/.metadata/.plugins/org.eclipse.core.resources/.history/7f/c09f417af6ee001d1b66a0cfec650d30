#ifndef IOT_H_
#define IOT_H_
#include <cstring>
#include <iostream>
#include<stdlib.h>
#include<ctime>
#include<cmath>
using namespace std;
class IOT {
	float temperature;
	float sugar_level;
	int pulse;
	float BMI;
	int oxygen_saturation_prcnt;
	int Bp[2];
public:
	IOT(char []="\0",float=98.6,float=99.0,int=80,float =21.0,int=95,int * =NULL);
	void update();
	void operator=(IOT &);
	void Dispaly();
	void setName(char []);
	virtual ~IOT();
	float getBmi() const;
	const int* getBp() const;
	const char* getName() const;
	int getOxygenSaturationPrcnt() const;
	int getPulse() const;
	float getSugarLevel() const;
	float getTemperature() const;
};

#endif /* IOT_H_ */
